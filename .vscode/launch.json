{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Using System Node",
      "program": "${workspaceFolder}/dist/index.js",
      "preLaunchTask": "npm: build",
      "envFile": "${workspaceFolder}/development.env",
      "args": ["--brainPath", "./brain.json"],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["node", "--inspect=0.0.0.0:9229"],
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch in Docker (Debug Bot)",
      "runtimeExecutable": "/usr/bin/env",
      "runtimeArgs": [
        "docker-compose", 
        "-f",
        "docker-compose.yml",
        "-f",
        "docker-compose.dev.yml",
        "up"
      ],
      "port": 9222,
      "restart": true,
      "timeout": 15000,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/app",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch in Docker (Debug Web)",
      "runtimeExecutable": "/usr/bin/env",
      "runtimeArgs": [
        "docker-compose", 
        "-f",
        "docker-compose.yml",
        "-f",
        "docker-compose.dev.yml",
        "up"
      ],
      "port": 9223,
      "restart": true,
      "timeout": 15000,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/app",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
    }
  ]
}
